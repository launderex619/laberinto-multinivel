<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sulemaia">
    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.GameScreen"
            android:label="@string/game_activity"
            android:parentActivityName=".Activity.CharacterSelector"></activity>
        <activity
            android:name=".Activity.CharacterEditor"
            android:label="@string/character_activity"
            android:parentActivityName=".Activity.CharacterSelector" />
        <activity
            android:name=".Activity.CharacterSelector"
            android:label="@string/character_selector_activity_name"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.FieldInformation"
            android:label="@string/field_information_activity_name"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.Tutorial"
            android:parentActivityName=".Activity.MainActivity"
            android:theme="@style/Theme.Intro" />
        <activity
            android:name=".Activity.LoadScreen"
            android:label="@string/title_activity_load_screen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>